{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0",
    "description": "API for retrieving employee data, full profile info, and pay history from SmartHR."
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "operationId": "getEmployee",
        "summary": "Fetch employee data by employee number",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Employee number (e.g., CP003)"
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            },
            "description": "Which table to use"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with employee data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": { "type": "string" },
                    "PreferredName": { "type": "string" },
                    "Surname": { "type": "string" }
                  },
                  "required": ["EmployeeNum"],
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "operationId": "getEmployeeFull",
        "summary": "Fetch full employee profile with job and position details",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Employee number"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with full profile",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": { "type": "string" },
                    "JobTitle": { "type": "string" },
                    "ProfileName": { "type": "string" },
                    "Description": { "type": "string" }
                  },
                  "required": ["EmployeeNum"],
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/get-pay-history": {
      "get": {
        "operationId": "getPayHistory",
        "summary": "Get historical pay data for an employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Employee number"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with pay history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "PayDate": { "type": "string", "format": "date" },
                      "Amount": { "type": "number" }
                    },
                    "required": ["PayDate", "Amount"],
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
