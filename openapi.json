{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0",
    "description": "Get employee data, pay history, and job descriptions"
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "operationId": "getEmployee",
        "summary": "Get basic employee info",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Basic employee info",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "operationId": "getEmployeeFull",
        "summary": "Get full employee job and profile info",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Full employee record",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/get-pay-history": {
      "get": {
        "operationId": "getPayHistory",
        "summary": "Get historic payment records",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Pay history records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          }
        }
      }
    }
  }
}
