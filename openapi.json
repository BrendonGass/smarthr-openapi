"/get-employee": {
  "get": {
    "operationId": "getEmployee",
    "summary": "Get employee details by employee number",
    "parameters": [
      {
        "name": "employee_number",
        "in": "query",
        "description": "The unique employee number (e.g., CP003)",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "table",
        "in": "query",
        "description": "The table to search in (Personnel or Personnel1)",
        "required": false,
        "schema": {
          "type": "string",
          "default": "Personnel"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Successful employee lookup",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "EmployeeNum": { "type": "string" },
                "FirstName": { "type": "string" },
                "Surname": { "type": "string" },
                "JobTitle": { "type": "string" },
                "DeptName": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        }
      },
      "404": {
        "description": "Employee not found"
      }
    }
  }
}
