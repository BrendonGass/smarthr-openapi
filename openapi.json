{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0",
    "description": "API for accessing employee data, full profile, and historical pay information from SmartHR."
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "operationId": "getEmployee",
        "summary": "Get basic employee data",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The employee number to search for"
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            },
            "description": "Specify which table to search"
          }
        ],
        "responses": {
          "200": {
            "description": "Employee data retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Employee not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "operationId": "getEmployeeFull",
        "summary": "Get full employee profile with job description",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The employee number to retrieve full profile for"
          }
        ],
        "responses": {
          "200": {
            "description": "Full profile retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Profile not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/get-pay-history": {
      "get": {
        "operationId": "getPayHistory",
        "summary": "Get historical pay data for an employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The employee number to fetch pay history for"
          }
        ],
        "responses": {
          "200": {
            "description": "Pay history retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No pay history found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
