{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "summary": "Get basic employee data",
        "operationId": "get_employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Basic employee record",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": { "type": "string" },
                    "PreferredName": { "type": "string" },
                    "Surname": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "summary": "Get full profile and pay history",
        "operationId": "get_employee_full",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Full employee profile and pay history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": { "type": "string" },
                    "PreferredName": { "type": "string" },
                    "Surname": { "type": "string" },
                    "JobTitle": { "type": "string" },
                    "DeptName": { "type": "string" },
                    "PayHistory": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "PayDate": { "type": "string" },
                          "Amount": { "type": "number" },
                          "PayType": { "type": "string" }
                        }
                      }
                    }
                  },
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    }
  }
}

