{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR Employee API",
    "version": "1.0.0",
    "description": "API to retrieve employee information, including full history and profiles."
  },
  "paths": {
    "/get-employee": {
      "get": {
        "summary": "Get basic employee data",
        "operationId": "get_employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Basic employee data returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": {
                      "type": "string"
                    },
                    "PreferredName": {
                      "type": "string"
                    },
                    "Surname": {
                      "type": "string"
                    },
                    "JobTitle": {
                      "type": "string"
                    },
                    "DeptName": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "EmployeeNum",
                    "PreferredName",
                    "Surname"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "summary": "Get full employee data including pay and job profile",
        "operationId": "get_employee_full",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Full employee profile with job and pay info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": {
                      "type": "string"
                    },
                    "PreferredName": {
                      "type": "string"
                    },
                    "Surname": {
                      "type": "string"
                    },
                    "JobTitle": {
                      "type": "string"
                    },
                    "DeptName": {
                      "type": "string"
                    },
                    "PositionTitle": {
                      "type": "string"
                    },
                    "Salary": {
                      "type": "number"
                    },
                    "ProfileID": {
                      "type": "integer"
                    },
                    "ProfileName": {
                      "type": "string"
                    },
                    "Description": {
                      "type": "string"
                    },
                    "PayYear": {
                      "type": "integer"
                    },
                    "PayMonth": {
                      "type": "integer"
                    },
                    "PayAmount": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "EmployeeNum",
                    "PreferredName",
                    "Surname"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
