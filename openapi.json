{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0",
    "description": "API for retrieving employee records from the SmartHR database."
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "summary": "Get basic employee info",
        "operationId": "getEmployee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "EmployeeNum value, e.g. CP003 or CEO_1"
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            },
            "description": "Which Personnel table to use"
          }
        ],
        "responses": {
          "200": {
            "description": "Employee data returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": { "type": "string" },
                    "FirstName": { "type": "string" },
                    "Surname": { "type": "string" },
                    "JobTitle": { "type": "string" },
                    "DeptName": { "type": "string" },
                    "Appointdate": { "type": "string", "format": "date" }
                  },
                  "required": ["EmployeeNum"]
                }
              }
            }
          },
          "400": { "description": "Missing parameters" },
          "404": { "description": "Employee not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "summary": "Get full profile and job description",
        "operationId": "getEmployeeFull",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "EmployeeNum to search"
          }
        ],
        "responses": {
          "200": {
            "description": "Extended employee data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": { "type": "string" },
                    "PreferredName": { "type": "string" },
                    "Surname": { "type": "string" },
                    "JobTitle": { "type": "string" },
                    "PositionTitle": { "type": "string" },
                    "ProfileName": { "type": "string" },
                    "Description": { "type": "string" }
                  },
                  "required": ["EmployeeNum"]
                }
              }
            }
          },
          "400": { "description": "Missing parameters" },
          "404": { "description": "Employee not found" },
          "500": { "description": "Server error" }
        }
      }
    }
  }
}

