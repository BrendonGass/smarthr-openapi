{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR Employee API",
    "version": "1.0.0",
    "description": "API for retrieving employee information from SQL Server."
  },
  "servers": [
    {
      "url": "https://smarthr-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "operationId": "getEmployee",
        "summary": "Retrieve employee info by number and table",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "description": "Employee number to look up",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "table",
            "in": "query",
            "required": true,
            "description": "Table to search (Personnel or Personnel1)",
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Employee found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Employee not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
