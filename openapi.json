{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0",
    "description": "API for retrieving employee data from SmartHR system, including basic and full profile info with historical pay."
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "summary": "Get basic employee data",
        "operationId": "get_employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "Personnel",
                "Personnel1"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Basic employee data returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": {
                      "type": "string"
                    },
                    "FirstName": {
                      "type": "string"
                    },
                    "Surname": {
                      "type": "string"
                    },
                    "JobTitle": {
                      "type": "string"
                    },
                    "DeptName": {
                      "type": "string"
                    },
                    "Appointdate": {
                      "type": "string",
                      "format": "date"
                    },
                    "Termination": {
                      "type": "boolean"
                    },
                    "TerminationDate": {
                      "type": "string",
                      "format": "date"
                    },
                    "TerminationReason": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "summary": "Get full employee data with pay and job profile info",
        "operationId": "get_employee_full",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Full employee profile with pay history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": {
                      "type": "string"
                    },
                    "FirstName": {
                      "type": "string"
                    },
                    "Surname": {
                      "type": "string"
                    },
                    "JobTitle": {
                      "type": "string"
                    },
                    "DeptName": {
                      "type": "string"
                    },
                    "Appointdate": {
                      "type": "string",
                      "format": "date"
                    },
                    "Termination": {
                      "type": "boolean"
                    },
                    "TerminationDate": {
                      "type": "string",
                      "format": "date"
                    },
                    "TerminationReason": {
                      "type": "string"
                    },
                    "Position": {
                      "type": "string"
                    },
                    "PositionTitle": {
                      "type": "string"
                    },
                    "Salary": {
                      "type": "number"
                    },
                    "ProfileID": {
                      "type": "integer"
                    },
                    "ProfileName": {
                      "type": "string"
                    },
                    "Description": {
                      "type": "string"
                    },
                    "PayHistory": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "PayDate": {
                            "type": "string",
                            "format": "date"
                          },
                          "Amount": {
                            "type": "number"
                          },
                          "PayType": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
