{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "summary": "Get basic employee data",
        "operationId": "get_employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "Personnel",
                "Personnel1"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with employee data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": {
                      "type": "string"
                    },
                    "PreferredName": {
                      "type": "string"
                    },
                    "Surname": {
                      "type": "string"
                    },
                    "JobTitle": {
                      "type": "string"
                    },
                    "DeptName": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "summary": "Get full employee data including job profile and pay",
        "operationId": "get_employee_full",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detailed employee profile with pay and job profile",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "EmployeeNum": {
                      "type": "string"
                    },
                    "PreferredName": {
                      "type": "string"
                    },
                    "Surname": {
                      "type": "string"
                    },
                    "Sex": {
                      "type": "string"
                    },
                    "Appointdate": {
                      "type": "string"
                    },
                    "JobTitle": {
                      "type": "string"
                    },
                    "DeptName": {
                      "type": "string"
                    },
                    "PositionTitle": {
                      "type": "string"
                    },
                    "Salary": {
                      "type": "number"
                    },
                    "ProfileID": {
                      "type": "integer"
                    },
                    "ProfileName": {
                      "type": "string"
                    },
                    "Description": {
                      "type": "string"
                    },
                    "PayYear": {
                      "type": "integer"
                    },
                    "PayMonth": {
                      "type": "integer"
                    },
                    "PayAmount": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
