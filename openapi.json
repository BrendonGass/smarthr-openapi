{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "operationId": "get_employee",
        "summary": "Fetch basic employee data",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Employee record",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "operationId": "get_employee_full",
        "summary": "Fetch extended employee data (including pay and job profile)",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Extended records for the employee",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
