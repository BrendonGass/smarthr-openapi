{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.0",
    "description": "API to retrieve employee data and pay history from the SmartHR system."
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "operationId": "get_employee",
        "summary": "Get basic employee data",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "CP003"
            }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Personnel", "Personnel1"],
              "default": "Personnel"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Employee data retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          },
          "404": {
            "description": "Employee not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "operationId": "get_employee_full",
        "summary": "Get full employee profile and pay history",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "CEO_1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Full employee profile and pay history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Employee": {
                      "type": "object",
                      "description": "Basic employee and job profile info",
                      "additionalProperties": true
                    },
                    "PayHistory": {
                      "type": "array",
                      "description": "List of pay history records",
                      "items": {
                        "type": "object",
                        "properties": {
                          "PayPeriod": { "type": "string" },
                          "TemplateName": { "type": "string" }
                        },
                        "additionalProperties": true
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
