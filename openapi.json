{
  "openapi": "3.1.0",
  "info": {
    "title": "SmartHR API",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://smarthr-flask-api.onrender.com"
    }
  ],
  "paths": {
    "/get-employee": {
      "get": {
        "summary": "Get basic employee data",
        "operationId": "get_employee",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "table",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "Personnel",
                "Personnel1"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Basic employee data retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/get-employee-full": {
      "get": {
        "summary": "Get full employee data with joined job profile and pay",
        "operationId": "get_employee_full",
        "parameters": [
          {
            "name": "employee_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detailed employee data including historic pay",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
